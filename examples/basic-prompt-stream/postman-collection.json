{
  "info": {
    "name": "Orion Gemini API - Basic Prompt Stream",
    "description": "Collection for testing the basic-prompt-stream endpoint with file uploads",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Basic Prompt Stream - Text File",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "text/plain"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "prompt",
              "value": "Analyze this text file and summarize its content",
              "type": "text"
            },
            {
              "key": "files",
              "type": "file",
              "src": "/path/to/test_file.txt"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/gemini/basic-prompt-stream",
          "host": ["{{baseUrl}}"],
          "path": ["gemini", "basic-prompt-stream"]
        },
        "description": "Stream response with text file upload"
      },
      "response": []
    },
